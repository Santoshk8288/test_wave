				<div bsModal #lgModal="bs-modal" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true">
				  <div class="modal-dialog modal-lg">
					<div class="modal-content">
					  <div class="modal-header">
						<h4 class="modal-title pull-left">Student</h4>
						<button type="button" class="close pull-right" (click)="lgModal.hide()" aria-label="Close">
						  <span aria-hidden="true">&times;</span>
						</button>
					  </div>
					  <div class="modal-body table-responsive">
						<div class="form-group">
							  <label class="control-label">Student Details</label>
							   <table class="table table-bordered table-hover table-list-search">
					
							<thead>
								<tr>
									
									<th>Name</th>	
									<th>Father's Name</th>
									<th>Mobile No</th>
									<th>Contact No</th>
									<th>Address</th>
									<th>DOB</th>
									<th>Email</th>
									<th>Qualification</th>
									<th>User Name</th>
									<th>City</th>
								</tr>
							</thead>
							<tbody>
								<tr *ngFor="let stu of studentDetails;let i = index;">
									
									<td>{{stu.stu_fname}} {{stu.stu_lname}}</td>
									<td>{{stu.stu_fathername}}</td>
									<td>{{stu.stu_contact_no1}}</td>
									<td>{{stu.stu_contact_no2}}</td>
									<td>{{stu.stu_address}}</td>
									<td>{{stu.stu_dob | date:'MMM dd, yyyy' }}</td>
									<td>{{stu.stu_email}}</td>
									<td>{{stu.stu_qualification}}</td>
									<td>{{stu.usr_username}}</td>
									<td>{{stu.stu_city}}</td>
								</tr>
								
							</tbody>
							
						</table>
							</div>
					  </div>
					</div>
				  </div>
				</div>
