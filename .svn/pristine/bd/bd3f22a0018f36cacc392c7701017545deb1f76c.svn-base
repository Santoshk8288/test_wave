
<div class="col-lg-12 sign-up-wrapper body_top_padding">
	<div class="box">
		<h2 class="text-center">User Profile</h2>
		<form name="form" #sturegForm="ngForm" [formGroup]="userprofile"  novalidate>
			<div class="form-group">
				<div class="profileImg" >  
					<img [src]="myProfileViewObj.displayImage ? myProfileViewObj.displayImage :'assets/img/signup.jpg'"/>
					<div>
	  					<input type="file" (change)="fileChange($event)" accept="image/*">		
					</div>
				</div>
			</div>
			<div class="col-md-6">
				<div class="form-group" >
					<label for="fname">First Name*</label>
					<input type="text" class="form-control"  placeholder="First Name" formControlName="fname" required maxlength="30"/>
					<span style="color : red" *ngIf="userprofile.get('fname').hasError('required') && userprofile.get('fname').touched  " >First name required .</span>
					<span style="color : red" *ngIf="!userprofile.get('fname').hasError('required')&& userprofile.get('fname').hasError('validateName')&& userprofile.get('fname').touched" >First name must contain 4 characters .</span>
	            	<span style="color : red" *ngIf="!userprofile.get('fname').hasError('required')&& !userprofile.get('fname').hasError('validateName') && userprofile.get('fname').hasError('maxlength') && userprofile.get('fname').untouched" > First name maximum length 30 .</span>
	                <span *ngIf="userprofile.get('fname').status == 'VALID'&& userprofile.get('fname').untouched" ></span>
				</div>
				<div class="form-group" >
					<label for="lastName">Last Name*</label>
					<input type="text" class="form-control"  placeholder="Last Name" formControlName="lname" required maxlength="30"/>
					<span style="color : red" *ngIf="userprofile.get('lname').hasError('required') && userprofile.get('lname').touched  " > Last name required .</span>
					<span style="color : red" *ngIf="!userprofile.get('lname').hasError('required')&& userprofile.get('lname').hasError('validateName')&& userprofile.get('lname').touched" >Last name must contain 4 characters .</span>
	            	<span style="color : red" *ngIf="!userprofile.get('lname').hasError('required')&& !userprofile.get('lname').hasError('validateName') && userprofile.get('lname').hasError('maxlength') && userprofile.get('lname').untouched" > Last name maximum length 30 .</span>
	                <span *ngIf="userprofile.get('lname').status == 'VALID'&& userprofile.get('lname').untouched" ></span>
				</div>
				<div class="form-group" >
					<label for="lastName">Father Name*</label>
					<input type="text" class="form-control" placeholder="Father Name" formControlName="fathername" required maxlength="30"/>
					<span style="color : red" *ngIf="userprofile.get('fathername').hasError('required') && userprofile.get('fathername').touched  " >Father's name required .</span>
					<span style="color : red" *ngIf="!userprofile.get('fathername').hasError('required')&& userprofile.get('fathername').hasError('validateName')&& userprofile.get('fathername').touched" >Father's name must contain 4 characters .</span>
	            	<span style="color : red" *ngIf="!userprofile.get('fathername').hasError('required')&& !userprofile.get('fathername').hasError('validateName') && userprofile.get('fathername').hasError('maxlength') && userprofile.get('fathername').untouched" > Father name maximum length 30 . </span>
	                <span *ngIf="userprofile.get('fathername').status == 'VALID'&& userprofile.get('fathername').untouched" ></span>
				</div>
				<div class="form-group" >
					<label for="lastName">E-Mail*</label>
					<input type="text" class="form-control" placeholder="Email" formControlName="email" required />
					<span style="color : red" *ngIf="userprofile.get('email').hasError('required') && userprofile.get('email').touched" >Email is required. 
	                </span>
	                <span style="color : red" *ngIf="!userprofile.get('email').hasError('required') && (userprofile.get('email').status == 'INVALID')&& userprofile.get('email').touched" >Email is invalid .</span>
	                <span *ngIf="userprofile.get('email').status == 'VALID'&& userprofile.get('email').untouched" > </span>
				</div>
				<div class="form-group">
					<label for="lastName">Mobile Number*</label>
					<input type="tel" class="form-control"  placeholder="Mobile No." formControlName="mobilenumber"  minlength="10" required maxlength="15"/>
					<span style="color : red" *ngIf="userprofile.get('mobilenumber').hasError('required') && userprofile.get('mobilenumber').touched  " >Mobile number required .</span>
					<span style="color : red" *ngIf="!userprofile.get('mobilenumber').hasError('required') &&(userprofile.get('mobilenumber').status == 'INVALID')&& userprofile.get('mobilenumber').touched" >  Mobile number must contain 10 digits.</span>
	                <span *ngIf="userprofile.get('mobilenumber').status == 'VALID'&& userprofile.get('mobilenumber').untouched" ></span>
				</div>
				<div class="form-group" >
					<label for="lastName">Alternate Number</label>
					<input type="tel" class="form-control"  placeholder="Alternate No." formControlName="contactno"  minlength="10" maxlength="15"/>
					<span style="color : red" *ngIf="userprofile.get('contactno').hasError('required') && userprofile.get('contactno').touched  " >Alternate number required .</span>
					<span style="color : red" *ngIf="!userprofile.get('contactno').hasError('required')&&(userprofile.get('contactno').status == 'INVALID')&& userprofile.get('contactno').touched" >  Alternate number must contain 10 digits.</span>
	                <span *ngIf="userprofile.get('contactno').status == 'VALID'&& userprofile.get('contactno').untouched" ></span>
				</div>
			</div>
			<div class="col-md-6">
				<div class="form-group" >
					<label for="password">Date of Birth*</label>
					<input type="date" class="form-control"  placeholder="Date of Birth"  required formControlName="dob"/>
					<span style="color : red" *ngIf="userprofile.get('dob').hasError('required') && userprofile.get('dob').touched" >Date of birth is required .</span>
		            <span *ngIf="userprofile.get('dob').status == 'VALID'&& userprofile.get('dob').untouched" ></span>
				</div>
				<div class="form-group" >
					<label for="password">Qualification*</label>
					<input type="text" class="form-control" placeholder="Qualification" required formControlName="qualification"/>
					<span style="color : red" *ngIf="userprofile.get('qualification').hasError('required') && userprofile.get('qualification').touched" >Qualification is required . </span>
		            <span *ngIf="userprofile.get('qualification').status == 'VALID'&& userprofile.get('qualification').untouched" ></span>
				</div>
				<div class="form-group" >
					<label for="country">Country*</label>
					<select  class="form-control" formControlName="country" (change)="onCountryChange(userprofile.get('country').value)" required>
					  	<option *ngFor="let country of countries;let i = index;" [ngValue]="country.id"   > {{ country.name}}</option>
					</select>
					<span style="color : red" *ngIf="userprofile.get('country').hasError('required') && userprofile.get('country').touched" >Country is required .</span>
	                <span *ngIf="userprofile.get('country').status == 'VALID'&& userprofile.get('country').untouched" ></span>
				</div>
				<div class="form-group" >
					<label for="state">State*</label>
					<select class="form-control" formControlName="state"  required>
						<option *ngFor="let state of filteredArry ;let i = index;" [ngValue]="state.id" >{{ state.name }}
						</option>
					</select>
					<span style="color : red" *ngIf="userprofile.get('state').hasError('required') && userprofile.get('state').touched" >State is required .</span>
	                <span *ngIf="userprofile.get('state').status == 'VALID'&& userprofile.get('state').untouched" ></span>
				</div>
				<div class="form-group" >
					<label for="password">City*</label>
					<input type="text" class="form-control" formControlName="city"  placeholder="City" required />
					<span style="color : red" *ngIf="userprofile.get('city').hasError('required') && userprofile.get('city').touched" >City is required .</span>
	                <span *ngIf="userprofile.get('city').status == 'VALID'&& userprofile.get('city').untouched" ></span>
				</div>
				<div class="form-group" >
					<label for="password">Zipcode*</label>
					<input type="tel" class="form-control"  placeholder="Zipcode" formControlName="zipcode" required  maxlength="6"/>
					<span style="color : red" *ngIf="userprofile.get('zipcode').hasError('required') && userprofile.get('zipcode').touched" >Zipcode is required .</span>
		            <span style="color : red" *ngIf="!userprofile.get('zipcode').hasError('required')&& userprofile.get('zipcode').hasError('validateZipcode')&& userprofile.get('zipcode').touched" >Zipcode must be 6 digits .</span>
		            <span *ngIf="userprofile.get('zipcode').status == 'VALID'&& userprofile.get('zipcode').untouched" ></span>
				</div>
			</div>
			<div class="col-md-12">
				<div class="form-group" >
					<label for="password">Address*</label>
					<textarea rows="4" cols="50" class="form-control" placeholder="Address" formControlName="address" required></textarea>
					<span style="color : red" *ngIf="userprofile.get('address').hasError('required') && userprofile.get('address').touched" >Address is required . </span>
		            <span *ngIf="userprofile.get('address').status == 'VALID'&& userprofile.get('address').untouched" > </span>
				</div>
			</div>
			<div class="form-group">
				<button class="btn btn-primary Reg_btn" type="submit" [disabled]="userprofile.invalid" (click)="upDateStudent()">Update</button>
				<a (click)="goBack()" class="btn  btn-danger Danger_btn	">Cancel</a>
			</div>
		</form>
	</div>
</div>
