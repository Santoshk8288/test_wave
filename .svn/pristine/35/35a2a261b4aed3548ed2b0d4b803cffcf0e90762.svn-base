.sign-up-wrapper{
  margin-top: 1%;
  text-align:center;
  .box{   
      width: 100%;
      height: auto;
  	text-align:left;
  		h2{
  		  margin-top: 10px;
  		  margin-bottom: 25px;
  		  }
  		&::-webkit-scrollbar{
  		  width: 6px;
  		  background-color: #F5F5F5;
  		  }
  		&::-webkit-scrollbar-thumb{
  		  background-color: #000000;
  		  }
  		.profileImg{
  			text-align: -webkit-center;
  			img{
  				width: 130px;
  				height: 130px;
  				margin-bottom: 20px;
  				border-radius: 5%;
  			  }
  		}
  		textarea.form-control {
  			width: 100%;
  			min-width: 100%;
  			max-width: 100%;
  		}
  		.Danger_btn {
  			height: 40px;
  			line-height: 1.8;
  		}
  		.Reg_btn, .Danger_btn{
  		padding: 6px 30px;
  		float:left;
  		}
  		.Danger_btn{
  			float:right
  		}
      .Choose_Course_box{
        input[type=checkbox], input[type=radio]{
          margin:4px 5px 4px 10px;
        }
      }
    }
}
 
@media (max-width: 1366px){
 .sign-up-wrapper{
		margin-top: 1%;
   .box{
  		height: 650px;
      }
  }
}
@media (max-width: 1280px){
 .sign-up-wrapper{
			margin-top: 1%;	
		 .box{
			height: 570px ;
			padding:25px;

		  }
 	}
}
@media (max-width: 1024px){
 .sign-up-wrapper{
		margin-top: 2%;	
   .box{
  		height: 660px ;
    }
  }
}

.ryt_img{
  float: right;
  width: 35%;
  height: 828px;
  background-image: url(../../../assets/img/signup.jpg);
  background-size: cover;
  background-position: right;
  color: #fff;
  padding: 0 3%;
  h2{
    margin-top: 130px;
    }
  .sign_up_a_txt{
    background: #fff;
    padding: 6px 25%;
    margin-top: 140%;
    color: #35497b;
    }
  .sign_up_a_txt:hover{
    color: #fff;
    text-decoration: none;
    border: 2px solid #fff;	
    background: transparent;  
    }
  .sign_up_p_txt{
    padding-top: 15px;
    }
  .form-group{
    margin-bottom: 30px;    
    input{
      height: 40px;
      border-radius: 0;
      border: none;
      box-shadow: unset;
      border-bottom: 1px solid;
      }
    label{
      letter-spacing: 0.5px;
      font-weight: 500;
	     }
    }
}


@media (max-width: 1366px){
  .ryt_img{
    height: 650px;
    }
}
	
@media (max-width: 1024px){
  .ryt_img{
    height: 748px;
    }
}